<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="58dp"
    android:background="@android:color/transparent"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_menu_search_result_name"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="@string/um_default_name"
        android:textColor="@color/menu_txt_sel"
        android:textSize="28sp" />

    <ImageView
        android:id="@+id/iv_menu_search_result_play"
        android:layout_width="60dp"
        android:layout_height="52dp"
        android:layout_marginStart="25dp"
        android:contentDescription="@string/app_name"
        android:focusable="false"
        android:src="@drawable/btn_play_unselected" />

    <ImageView
        android:id="@+id/iv_menu_search_result_add"
        android:layout_width="60dp"
        android:layout_height="52dp"
        android:layout_marginStart="9dp"
        android:contentDescription="@string/app_name"
        android:focusable="false"
        android:src="@drawable/btn_add_unselected" />

    <ImageView
        android:id="@+id/iv_menu_search_result_collect"
        android:layout_width="60dp"
        android:layout_height="52dp"
        android:layout_marginStart="9dp"
        android:contentDescription="@string/app_name"
        android:focusable="false"
        android:src="@drawable/btn_collect_unselected" />

</LinearLayout>