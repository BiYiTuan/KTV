<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ktv="http://schemas.android.com/apk/res/com.sz.ead.app.ktv_wakg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipChildren="false" >

    <!-- 应用启动画面 -->
    <ImageView
        android:id="@+id/id_main_welcome"
        android:layout_width="1280dp"
        android:layout_height="720dp"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:src="@drawable/welcome" />

    <!-- 搜索入口 -->
    <ImageView
        android:id="@+id/id_main_search"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginStart="1155dp"
        android:layout_marginTop="41dp"
        android:contentDescription="@string/app_name"
        android:focusable="true"
        android:scaleType="fitXY"
        android:src="@drawable/index_search_selector" />

    <!-- 推荐音乐 -->
    <RelativeLayout
        android:id="@+id/id_main_recommend"
        android:layout_width="fill_parent"
        android:layout_height="416dp"
        android:layout_marginTop="44dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:focusable="true" >

        <ImageView
            android:id="@+id/id_main_recommend_bak"
            android:layout_width="371dp"
            android:layout_height="230dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="43dp"
            android:clipChildren="false"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@drawable/index_recommend_default"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/id_main_recommend1"
            android:layout_width="371dp"
            android:layout_height="230dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="43dp"
            android:clipChildren="false"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@drawable/index_recommend_default" />

        <ImageView
            android:id="@+id/id_main_recommend2"
            android:layout_width="464dp"
            android:layout_height="288dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="168dp"
            android:clipChildren="false"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@drawable/index_recommend_default" />

        <ImageView
            android:id="@+id/id_main_recommend5"
            android:layout_width="371dp"
            android:layout_height="230dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="43dp"
            android:clipChildren="false"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@drawable/index_recommend_default" />

        <ImageView
            android:id="@+id/id_main_recommend4"
            android:layout_width="464dp"
            android:layout_height="288dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="168dp"
            android:clipChildren="false"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@drawable/index_recommend_default" />

        <ImageView
            android:id="@+id/id_main_recommend3"
            android:layout_width="580dp"
            android:layout_height="360dp"
            android:layout_centerInParent="true"
            android:clipChildren="false"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@drawable/index_recommend_default"/>

        <!-- 选中框 -->
        <ImageView
            android:id="@+id/id_main_focus"
            android:layout_width="636dp"
            android:layout_height="416dp"
            android:layout_centerInParent="true"
            android:clipChildren="false"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@drawable/index_recommand_selected_1"
            android:visibility="invisible" />

        <requestFocus />
    </RelativeLayout>

    <!-- 已点歌曲 -->
    <com.sz.ead.app.ktv.ui.widget.HomeItem
        android:id="@+id/id_main_music"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="478dp"
        android:focusable="true"
        ktv:shadowImage="@drawable/index_h_selected"
        ktv:defaultImage="@drawable/index_selected"
        ktv:defaultText="@string/index_selected"
        ktv:type="0"
        ktv:shadowPaddingBottom="28dp"
        ktv:shadowPaddingLeft="28dp"
        ktv:shadowPaddingRight="28dp"
        ktv:shadowPaddingTop="28dp" />

    <!-- 个人中心 -->
    <com.sz.ead.app.ktv.ui.widget.HomeItem
        android:id="@+id/id_main_usercenter"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="588dp"
        android:focusable="true"
        ktv:shadowImage="@drawable/index_h_selected"
        ktv:defaultImage="@drawable/index_selected"
        ktv:defaultText="@string/index_usercenter"
        ktv:type="0"
        ktv:shadowPaddingBottom="28dp"
        ktv:shadowPaddingLeft="28dp"
        ktv:shadowPaddingRight="28dp"
        ktv:shadowPaddingTop="28dp" />

    <!-- 华语K歌榜 -->
    <com.sz.ead.app.ktv.ui.widget.HomeItem
        android:id="@+id/id_main_column1"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_marginStart="230dp"
        android:layout_marginTop="478dp"
        android:focusable="true"
        ktv:shadowImage="@drawable/index_v_selected"
        ktv:defaultImage="@drawable/index_classify_1"
        ktv:defaultText="@string/index_cfy_1"
        ktv:type="1"
        ktv:shadowPaddingBottom="28dp"
        ktv:shadowPaddingLeft="28dp"
        ktv:shadowPaddingRight="28dp"
        ktv:shadowPaddingTop="28dp" />

    <!-- 新歌抢先榜 -->
    <com.sz.ead.app.ktv.ui.widget.HomeItem
        android:id="@+id/id_main_column2"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_marginStart="400dp"
        android:layout_marginTop="478dp"
        android:focusable="true"
        ktv:shadowImage="@drawable/index_v_selected"
        ktv:defaultImage="@drawable/index_classify_2"
        ktv:defaultText="@string/index_cfy_2"
        ktv:type="1"
        ktv:shadowPaddingBottom="28dp"
        ktv:shadowPaddingLeft="28dp"
        ktv:shadowPaddingRight="28dp"
        ktv:shadowPaddingTop="28dp" />

    <!-- 拼音点歌 -->
    <com.sz.ead.app.ktv.ui.widget.HomeItem
        android:id="@+id/id_main_column3"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_marginStart="570dp"
        android:layout_marginTop="478dp"
        android:focusable="true"
        ktv:shadowImage="@drawable/index_v_selected"
        ktv:defaultImage="@drawable/index_classify_3"
        ktv:defaultText="@string/index_cfy_3"
        ktv:type="1"
        ktv:shadowPaddingBottom="28dp"
        ktv:shadowPaddingLeft="28dp"
        ktv:shadowPaddingRight="28dp"
        ktv:shadowPaddingTop="28dp" />

    <!-- 分类点歌 -->
    <com.sz.ead.app.ktv.ui.widget.HomeItem
        android:id="@+id/id_main_column4"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_marginStart="740dp"
        android:layout_marginTop="478dp"
        android:focusable="true"
        ktv:shadowImage="@drawable/index_v_selected"
        ktv:defaultImage="@drawable/index_classify_4"
        ktv:defaultText="@string/index_cfy_4"
        ktv:type="1"
        ktv:shadowPaddingBottom="28dp"
        ktv:shadowPaddingLeft="28dp"
        ktv:shadowPaddingRight="28dp"
        ktv:shadowPaddingTop="28dp" />

    <!-- 歌星点歌 -->
    <com.sz.ead.app.ktv.ui.widget.HomeItem
        android:id="@+id/id_main_column5"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_marginStart="910dp"
        android:layout_marginTop="478dp"
        android:focusable="true"
        ktv:shadowImage="@drawable/index_v_selected"
        ktv:defaultImage="@drawable/index_classify_5"
        ktv:defaultText="@string/index_cfy_5"
        ktv:type="1"
        ktv:shadowPaddingBottom="28dp"
        ktv:shadowPaddingLeft="28dp"
        ktv:shadowPaddingRight="28dp"
        ktv:shadowPaddingTop="28dp" />

    <!-- 语种点歌 -->
    <com.sz.ead.app.ktv.ui.widget.HomeItem
        android:id="@+id/id_main_column6"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_marginStart="1080dp"
        android:layout_marginTop="478dp"
        android:focusable="true"
        ktv:shadowImage="@drawable/index_v_selected"
        ktv:defaultImage="@drawable/index_classify_6"
        ktv:defaultText="@string/index_cfy_6"
        ktv:type="1"
        ktv:shadowPaddingBottom="28dp"
        ktv:shadowPaddingLeft="28dp"
        ktv:shadowPaddingRight="28dp"
        ktv:shadowPaddingTop="28dp" />

</RelativeLayout>