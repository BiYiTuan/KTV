<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <Button
        android:id="@+id/id_setting_update"
        android:layout_width="184dp"
        android:layout_height="44dp"
        android:layout_marginStart="1011dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/btn_usercenter_update_selector"
        android:nextFocusDown="@id/rbtn_usercenter_setting"
        android:nextFocusLeft="@id/rbtn_usercenter_setting"
        android:text="@string/usercenter_setting_checkupdate"
        android:textColor="@color/btn_umlist_txt_sel"
        android:textSize="28sp"
        android:visibility="gone" />

    <View
        android:layout_width="915dp"
        android:layout_height="2dp"
        android:layout_marginStart="284dp"
        android:layout_marginTop="109dp"
        android:background="@drawable/line_umlist" />

    <TextView
        android:id="@+id/id_setting_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="294dp"
        android:layout_marginTop="133dp"
        android:gravity="center"
        android:text="@string/usercenter_setting_version"
        android:textColor="@color/umlist_normal_text"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/id_setting_lastest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="294dp"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:text="@string/usercenter_setting_lastestversion"
        android:textColor="@color/umlist_normal_text"
        android:textSize="32sp"
        android:visibility="gone" />

</RelativeLayout>