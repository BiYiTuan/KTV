<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <com.sz.ead.app.ktv.ui.widget.NoScrollViewPager
        android:id="@+id/id_umlist_viewpager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layoutAnimation="@anim/list_anim_layout" />

    <RadioGroup
        android:id="@+id/id_umlist_radiogroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="59dp"
        android:layout_marginTop="54dp"
        android:orientation="vertical" >

        <RadioButton
            android:id="@+id/id_umlist_selected"
            android:layout_width="200dp"
            android:layout_height="76dp"
            android:background="@drawable/tab_mulist_selector"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:nextFocusRight="@id/lv_umselected"
            android:text="@string/um_song_selected"
            android:textColor="@color/tab_umlist_txt_sel"
            android:textSize="38sp" >

            <requestFocus />
        </RadioButton>

        <RadioButton
            android:id="@+id/id_umlist_sung"
            android:layout_width="200dp"
            android:layout_height="76dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/tab_mulist_selector"
            android:button="@null"
            android:gravity="center"
            android:nextFocusRight="@id/lv_umsung"
            android:text="@string/um_song_sung"
            android:textColor="@color/tab_umlist_txt_sel"
            android:textSize="38sp" />
    </RadioGroup>

</RelativeLayout>